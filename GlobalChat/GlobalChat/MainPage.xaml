<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GlobalChat.MainPage"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit">

    <StackLayout BackgroundColor="{StaticResource Last}">
        <Label Padding="0,10" HorizontalTextAlignment="Center" Text="GlobalChat" FontSize="35" TextColor="{StaticResource First}" BackgroundColor="{StaticResource LogoColor}"/>

        <Label Padding="10, 10, 0, 0" Text="Name:" TextColor="{StaticResource TitleColor}" FontSize="Medium"/>
        <Entry x:Name="NameEntry" Margin="5, 0" TextColor="{StaticResource TextColor}" BackgroundColor="{StaticResource Third}" MaxLength="15"/>
        <Label Margin="5, 0" Text="Maximum of 15 characters" TextColor="{StaticResource TextColor}"/>

        <Button Margin="10,10,10,0" Text="Start chatting!" BackgroundColor="{StaticResource Top}" Clicked="Start_Clicked"/>

        <Label x:Name="RandsomeText" Margin="0,0,0,40" Text="Made by Zhentao Wei. Hired by Chi Larsen for 200DKK." VerticalOptions="EndAndExpand" HorizontalOptions="Center"/>
    </StackLayout>

</ContentPage>
